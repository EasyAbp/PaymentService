@page
@using EasyAbp.PaymentService.WeChatPay.Localization
@using EasyAbp.PaymentService.WeChatPay.Web.Pages.PaymentService.WeChatPay.PaymentRecords.PaymentRecord
@using Microsoft.AspNetCore.Mvc.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Layout
@model IndexModel
@inject IPageLayout PageLayout
@inject IHtmlLocalizer<WeChatPayResource> L
@{
    PageLayout.Content.Title = L["Menu:PaymentRecord"].Value;
    PageLayout.Content.BreadCrumb.Add(L["Menu:WeChatPayManagement"].Value);
    PageLayout.Content.BreadCrumb.Add(L["Menu:PaymentService"].Value);
    PageLayout.Content.MenuItemName = "EasyAbpPaymentServiceWeChatPayPaymentRecord";
}

@section scripts
{
    <abp-script src="/Pages/PaymentService/WeChatPay/PaymentRecords/PaymentRecord/index.js" />
}
@section styles
{
    <abp-style src="/Pages/PaymentService/WeChatPay/PaymentRecords/PaymentRecord/index.css"/>
}

<abp-card>
    <abp-card-body>
        <abp-table striped-rows="true" id="PaymentRecordTable" class="nowrap">
            <thead>
            <tr>
                <th>@L["Actions"]</th>
                <th>@L["PaymentRecordPaymentId"]</th>
                <th>@L["PaymentRecordAppId"]</th>
                <th>@L["PaymentRecordMchId"]</th>
                <th>@L["PaymentRecordOutTradeNo"]</th>
                <th>@L["PaymentRecordTransactionId"]</th>
                <th>@L["PaymentRecordTradeType"]</th>
                <th>@L["PaymentRecordBankType"]</th>
                <th>@L["PaymentRecordAttach"]</th>
                <th>@L["PaymentRecordTradeState"]</th>
                <th>@L["PaymentRecordTradeStateDesc"]</th>
                <th>@L["PaymentRecordSuccessTime"]</th>
                <th>@L["PaymentRecordPayer"]</th>
                <th>@L["PaymentRecordAmount"]</th>
                <th>@L["PaymentRecordSceneInfo"]</th>
                <th>@L["PaymentRecordPromotionDetail"]</th>
                <th>@L["PaymentRecordReturnCode"]</th>
                <th>@L["PaymentRecordReturnMsg"]</th>
                <th>@L["PaymentRecordDeviceInfo"]</th>
                <th>@L["PaymentRecordResultCode"]</th>
                <th>@L["PaymentRecordErrCode"]</th>
                <th>@L["PaymentRecordErrCodeDes"]</th>
                <th>@L["PaymentRecordOpenid"]</th>
                <th>@L["PaymentRecordIsSubscribe"]</th>
                <th>@L["PaymentRecordTotalFee"]</th>
                <th>@L["PaymentRecordSettlementTotalFee"]</th>
                <th>@L["PaymentRecordFeeType"]</th>
                <th>@L["PaymentRecordCashFee"]</th>
                <th>@L["PaymentRecordCashFeeType"]</th>
                <th>@L["PaymentRecordCouponFee"]</th>
                <th>@L["PaymentRecordCouponCount"]</th>
                <th>@L["PaymentRecordCouponTypes"]</th>
                <th>@L["PaymentRecordCouponIds"]</th>
                <th>@L["PaymentRecordCouponFees"]</th>
                <th>@L["PaymentRecordTimeEnd"]</th>
            </tr>
            </thead>
        </abp-table>
    </abp-card-body>
</abp-card>