@page
@using EasyAbp.PaymentService.Localization
@using EasyAbp.PaymentService.Web.Menus
@using Microsoft.AspNetCore.Mvc.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Layout
@model EasyAbp.PaymentService.Web.Pages.PaymentService.Refunds.RefundItem.IndexModel
@inject IPageLayout PageLayout
@inject IHtmlLocalizer<PaymentServiceResource> L
@{
    PageLayout.Content.Title = L["RefundItem"].Value;
    PageLayout.Content.BreadCrumb.Add(L["Menu:RefundItem"].Value);
    PageLayout.Content.MenuItemName = PaymentServiceMenus.Refund;
}

@section scripts
{
    <abp-script src="/Pages/PaymentService/Refunds/RefundItem/index.js" />
}
@section styles
{
    <abp-style src="/Pages/PaymentService/Refunds/RefundItem/index.css"/>
}

<script>
    var refundId = '@Model.RefundId';
</script>

<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["RefundItem"]</abp-card-title>
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="RefundTable" class="nowrap">
            <thead>
            <tr>
                <th>@L["Actions"]</th>
                <th>@L["RefundPaymentItemId"]</th>
                <th>@L["RefundRefundAmount"]</th>
                <th>@L["RefundCustomerRemark"]</th>
                <th>@L["RefundStaffRemark"]</th>
            </tr>
            </thead>
        </abp-table>
    </abp-card-body>
</abp-card>